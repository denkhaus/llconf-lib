(llconf ready
		(and
				(llconf lib present)
				(llconf up to date)
				(restart)
		)
)

(llconf lib present
		(git clone
				"https://github.com/denkhaus/llconf-lib.git"
				[var:lib_dir]
		)
)

(llconf up to date
		(or
				(and
						(setvar "llconf-rev-file" [join [var:lib_dir] "/.llconf_rev"])
						(test "test" "-f" [var:llconf-rev-file])
						(pipe
								(test "test" "cat" [var:llconf-rev-file])
								(test "xargs" "-i" "test" "$(llconf --revision)" "==" "{}")
						)
				)
				(change "go" "get" "-u" "-v" "github.com/denkhaus/llconf")
		)
)
